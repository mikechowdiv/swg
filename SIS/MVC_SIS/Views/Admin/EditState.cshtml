@* View created for the edit state function*@
@model Exercises.Models.Data.State
@{
    ViewBag.Title = "EditState";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit State</h3>
        @Html.ActionLink("Return to List", "States", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">

                @Html.HiddenFor(s => s.StateAbbreviation)
                <label>State Name</label>
                @Html.TextBoxFor(s => s.StateName, new { @class = "form-control", placeholder = "State" })
                <label>State Abb</label>
                @Html.TextBoxFor(s => s.StateAbbreviation, new { @class = "form-control", placeholder = "StateAbb" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Edit</button>
        }
    </div>
</div>      