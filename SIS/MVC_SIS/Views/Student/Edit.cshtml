@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-xs-12">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h3>Edit Student</h3>
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Educational Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        @Html.HiddenFor(m => m.Student.StudentId);
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">
                                        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                    </div>
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">Address Details</h4>
                                        </div>
                                        <div class="panel-body">
                                            <div class="form-group">
                                                @Html.HiddenFor(m => m.Student.Address.AddressId)
                                                <label>Street: </label>
                                                @Html.TextBoxFor(m => m.Student.Address.Street1)
                                            </div>
                                            <div class="form-group">
                                                <label>City: </label>
                                                @Html.TextBoxFor(m => m.Student.Address.City)
                                            </div>
                                            <div class="form-group">
                                                <label>State</label>
                                                @Html.DropDownListFor(m => m.Student.Address.State.StateName, Model.StateItems, "State", null)
                                                <label>State Abb</label>
                                                @Html.DropDownListFor(m=>m.Student.Address.State.StateAbbreviation, Model.StateItems, "State-Abb", null);
                                            </div>
                                            <div class="form-group">
                                                <label>Postal Code</label>
                                                @Html.TextBoxFor(m => m.Student.Address.PostalCode)
                                            </div>
                                            <button class="btn btn-primary">Edit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>