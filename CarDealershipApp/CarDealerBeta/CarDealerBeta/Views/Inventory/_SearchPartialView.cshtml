<div id="divQuickSearch" class="row">
    <h5><b>Quick Search</b></h5>
    <input type="text" class="form-control" id="txtSearchText" placeholder="Enter make model or year" />
    <label>Price</label>
    <select class="form-control" id="ddlMinPrice">
        <option value="-1">No Min</option>
        <option value="10000">$10000</option>
        <option value="20000">$20000</option>
        <option value="30000">$30000</option>
        <option value="40000">$40000</option>
        <option value="50000">$50000</option>
        <option value="60000">$60000</option>
        <option value="70000">$70000</option>
        <option value="80000">$80000</option>
        <option value="90000">$90000</option>
        <option value="100000">$100000</option>
    </select>
    <select class="form-control" id="ddlMaxPrice">
        <option value="-1">No Max</option>
        <option value="10000">$10000</option>
        <option value="20000">$20000</option>
        <option value="30000">$30000</option>
        <option value="40000">$40000</option>
        <option value="50000">$50000</option>
        <option value="60000">$60000</option>
        <option value="70000">$70000</option>
        <option value="80000">$80000</option>
        <option value="90000">$90000</option>
        <option value="100000">$100000</option>
    </select>
    <label>Year</label>
    @{
        List<int> years = new List<int>();
        for (int i = 2000; i <= DateTime.Now.Year + 1; i++)
        {
            years.Add(i);
        }
    }
    <select class="form-control" id="ddlMinYear">
        <option value="-1">No Min</option>
        @{
            foreach (var item in years)
            {
                <option value="@item">@item</option>
            }
        }
    </select>
    <select class="form-control" id="ddlMaxYear">
        <option value="-1">No Max</option>
        @{
            foreach (var item in years)
            {
                <option value="@item">@item</option>
            }
        }
    </select>
    <p></p>
    <div class="row text-center">
        <button class="btn btn-primary" id="btnSearch">Search</button>
    </div>
</div>

<h3><b>Search Results</b></h3>
<p></p>
<div id="noResultMessage" style="display:none">
    <span><b>No results found!!!</b></span>
</div>
<div id="divSearchResult">

</div>

