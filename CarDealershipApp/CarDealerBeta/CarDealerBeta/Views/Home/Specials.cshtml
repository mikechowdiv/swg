@model List<Data.Special>
@{
    ViewBag.Title = "Specials";
}
<h2>@ViewBag.Title</h2>

<div>
    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-md-12 clsSpecialTile">
                <div class="col-md-12">
                    @*<span class="fa fa-dollar"></span>*@
                    <h3>@item.Name</h3>
                </div>
                <div class="col-md-12">
                    @item.Description
                </div>
            </div>
        }
    }
    
</div>