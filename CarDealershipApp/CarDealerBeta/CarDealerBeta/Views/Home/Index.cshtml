@model List<Data.Vehicle>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert-info">
    <h1>BIG HUGE SALE!!!</h1>
    <p class="lead">Big Huge Sale</p>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <h3>Featured Vehicles</h3>
    </div>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="col-md-3 text-center">
                <div class="clsFeatureTile">
                    @{
                        var imageName = "placeholder.png";
                        if (File.Exists(HttpContext.Current.Server.MapPath("~/Images/" + item.ImageFile)))
                        {
                            imageName = item.ImageFile;
                        }

                    }
                    <a href="@Url.Action("Details","Inventory",new {id=item.Id })" >
                        <img src="~/Images/@imageName" class="clsVehicleTileImage" />
                    </a>
                    <div>
                        <span>@item.Year @item.Model.Make.Name @item.Model.Name</span>
                    </div>
                    <div>
                        <span>$@item.MSRP</span>
                    </div>
                </div>

            </div>
        }
    }
</div>