@model IEnumerable<Model.Queries.FeaturesItem>

@{
    ViewBag.Title = "Favorites";
}

<div class="row">
    <div class="col-xs-12">
        <h2>My Account</h2>
    </div>
</div>
<div class="row">
    @Html.Partial("_SideNavPartial")
    <div class="col-xs-10">
        <h3>My Favorites</h3>
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Location
                        </th>
                        <th>
                            Rate
                        </th>
                        <th>
                            Size
                        </th>
                        <th>
                            Condition
                        </th>
                        <th>
                            Transmission
                        </th>
                        <th>
                            Make
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var listing in Model)
                    {
                        <tr>
                            <td>@($"{listing.City}, {listing.StateId}")</td>
                            <td>@listing.Rate.ToString("c")</td>
                            <td>@listing.Mileage miles</td>
                            <td>
                                @if (listing.isManual)
                                {
                                    <text>Yes</text>
                                }
                                else
                                {
                                    <text>No</text>
                                }
                            </td>
                            <td>
                                @if (listing.isNew)
                                {
                                    <text>Yes</text>
                                }
                                else
                                {
                                    <text>No</text>
                                }
                            </td>
                            <td>@listing.MakesName</td>
                            <td>
                                @using (Html.BeginForm("DeleteFavorite", "MyAccount", FormMethod.Post))
                                {
                                    @Html.Hidden("ListingId", listing.ListingId)
                                    <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?');">Delete</button>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>You do not have any favorites.</p>
        }
    </div>
</div>


